@model List<BookViewModel>

@{
    ViewData["Title"] = "IndexAsync";
}
<div class="row fadeIn" style="margin:30px 30px 30px 30px">
    <div class="col-md-6">
        <i class="fas fa-book" style="font-size: 60px; color: #5eaaa8;"><span style="font-size:24pt;color:#5eaaa8">  Books</span></i>
    </div>

</div>
<hr />
<table class="table table-bordered table-striped moveUp">
    <thead style="background-color:#a5ccca">
        <tr>
            @*<th>ID</th>*@
            <th width="45%">Book Name</th>
            <th>Author</th>
            <th>Isbn</th>
            <th width="26%">Control</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var books in Model)
        {
            <tr class="accordion-toggle" data-toggle="collapse">
                @*<td>@books.Id</td>*@
                <td>@books.Name</td>
                <td>@books.Author</td>
                <td>@books.Code</td>
                <td>
                    <a class="btn btn-outline-info" data-toggle="collapse" data-target="#colse_@(books.Id)" aria-expanded="false">
                        <i class="fa fa-chevron-down"></i> More
                    </a>
                    <a asp-action="Edit" asp-route-id="@books.Id" class="btn btn-outline-secondary"><i class="far fa-edit"></i> Edit</a>

                    <a asp-action="ConfirmDelete" asp-route-id="@books.Id" class="btn btn-outline-danger"><i class="far fa-trash-alt"></i> Delete</a>
                </td>
            </tr>

            <tr>
                <td colspan="4">
                    <div class="collapse" id="colse_@(books.Id)" change-collapse-icon>
                        <div class="card card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <b>Release Yaer :</b>
                                </div>
                                <div class="col-md-4">
                                    <span>@books.ReleaseYaer</span>
                                </div>

                                <div class="col-md-2">
                                    <b>Quantity :</b>
                                </div>
                                <div class="col-md-4">
                                    <span>@books.Quantity</span>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2">
                                    <b>Price :</b>
                                </div>
                                <div class="col-md-4">
                                    <span>@books.Price</span>
                                </div>

                                <div class="col-md-2">
                                    <b>Shelf Number :</b>
                                </div>
                                <div class="col-md-4">
                                    <span>@books.ShelfNumber</span>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2">
                                    <b>Row Number :</b>
                                </div>
                                <div class="col-md-4">
                                    <span>@books.RowNumber</span>
                                </div>

                                <div class="col-md-2">
                                    <b>Column Number :</b>
                                </div>
                                <div class="col-md-4">
                                    <span>@books.ColumnNumber</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="moveUp">
    <a asp-action="Create" class="btn btn-info"><i class="far fa-plus-square"></i> Add New Book</a>
    <br /><br />
</div>