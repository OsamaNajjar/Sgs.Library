            <a is-active-controller class="nav-item nav-link" asp-controller="Maps" asp-action="Index">Maps</a>
            <a is-active-controller class="nav-item nav-link" asp-controller="Periodicals" asp-action="Index">Periodicals</a>

            <div class="dropdown">
               <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                  data-toggle="dropdown" aria-expanded="false">
                    Others
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown" 
                     style="background-color: #4c8a89;">
                    <a is-active-controller class="nav-item nav-link" asp-controller="ReportsTypes" asp-action="IndexAsync">Reports Types</a>
                    <div class="dropdown-divider"></div>
                    <a is-active-controller class="nav-item nav-link" asp-controller="MapsTypes" asp-action="IndexAsync">Maps Types</a>
