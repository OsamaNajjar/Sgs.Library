                }, {
                        duration: 2900,
                        easing: 'swing',
                        step: function () {
                            $('.borrowerMap').text(Math.ceil(this.BorrowerMap));
                        }
                    });

                $({
                    BorrowerPeriodical: 0
                }).animate({
                    BorrowerPeriodical: $('.borrowerPeriodical').text()
                }, {
                        duration: 2900,
                        easing: 'swing',
                        step: function () {
                            $('.borrowerPeriodical').text(Math.ceil(this.BorrowerPeriodical));
                        }
                    });
            });
        })();

    </script>

}
