@model List<ReportTypeViewModel>
@{
    ViewData["Title"] = "IndexAsync";
}

<div class="row fadeIn" style="margin:30px 30px 30px 30px">
    <div class="col-md-6">
        <i class="far fa-file-alt" style="font-size: 60px; color: #4c8a89;"><span style="font-size:24pt;color:#4c8a89;"> <b>Reports Types</b></span></i>
    </div>

</div>
<hr />
<table class="table table-bordered table-striped moveUp">
    <thead style="background-color:#a5ccca">
        <tr>
            <th>ID</th>
            <th width="45%">Reports Types Name</th>
            <th width="26%">Control</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ReportType in Model)
        {
            <tr class="accordion-toggle" data-toggle="collapse">
                <td>@ReportType.Id</td>
                <td>@ReportType.Name</td>
                <td>
                    
                    <a asp-action="Edit" asp-route-id="@ReportType.Id" class="btn btn-outline-secondary"><i class="far fa-edit"></i> Edit</a>

                    <a asp-action="ConfirmDelete" asp-route-id="@ReportType.Id" class="btn btn-outline-danger"><i class="far fa-trash-alt"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="moveUp">
    <a asp-action="Create" class="btn btn-info"><i class="far fa-plus-square"></i> Add New Reports Types</a>
    <br /><br />
</div>
